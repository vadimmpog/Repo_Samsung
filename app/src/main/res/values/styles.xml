<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="lessonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#9e9e9e</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="informationAboutLesson">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="numberOfLesson">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">4</item>
        <item name="android:textSize">18pt</item>
    </style>

    <style name="wrapTimeLesson">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#c4c2c2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="timeLesson">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#2172ff</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="wrapTitleOfLesson">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">vertical</item>]
    </style>

    <style name="titleOfLesson">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="additionalInformation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="typeOfLesson">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>>
        <item name="android:gravity">center</item>
        <item name="android:background">#5996ff</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="cabinet">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#c4c2c2</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="wrapHomeworkOrNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textHomeworkOrNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10pt</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#aaaeb5</item>
    </style>

    <style name="buttonHomeworkOrNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#5996FF</item>
    </style>

    <style name="weekend">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15pt</item>
    </style>
</resources>